@{
}

@model CinemaSchedule.Models.Entities.Note


@if (Model is null)
{
    <p>Не удалось найти заметку</p>
}
else
{
    <h1>Изменение заметки</h1>
    <form method="post">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Название заметки</label>
            <div class="col-sm-12">
                @Html.ValidationMessageFor(m => m.NoteName, null, new { @class = "text-danger" })
                <input type="text" class="form-control" asp-for=NoteName>
            </div>
        </div>

        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Описание</label>
            <div class="col-sm-12">
                @Html.ValidationMessageFor(m => m.NoteDescription, null, new { @class = "text-danger" })
                <textarea class="form-control" rows="10" asp-for="NoteDescription"></textarea>
            </div>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-success">Сохранить</button>
            <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Notes" asp-route-id="@Model.Id">Удалить</button>
        </div>
    </form>
}